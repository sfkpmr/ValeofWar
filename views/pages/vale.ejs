    <hr class="solid">
    <t>Attack power: <output id="attack">
        <%= attackValue %>
      </output></t><br>
    <t>Defense power: <output id="defense">
        <%= defenseValue %>
      </output></t><br>
    <t>Incomes</t>
  </div>



  <div class="main">
    <iframe src="/town" title="" style="position:absolute; width: 80%; height: 80%; border: none"
