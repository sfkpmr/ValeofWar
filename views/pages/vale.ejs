        <%= stone %>
      </output> </t><br>
    <t> <img src="../static/images/iron-ingots.png" alt="Iron" title="Iron"
        style="width:25px;height:auto;vertical-align:middle;"> <output id="iron">
        <%= iron %>
      </output> </t><br>
    <t><img src="../static/images/gold-ingots.png" alt="Gold" title="Gold"
        style="width:25px;height:auto;vertical-align:middle;"> <output id="gold">
        <%= gold %>
      </output> </t><br>
    <hr class="solid">
    <t><output id="recruits">Recruits: <%= recruits %></output></t><br>
    <t><output id="horses">Horses: <%= horses %></output></t><br>
    <hr class="solid">
    <t>Archers: <output id="archers">
        <%= archers %>
      </output></t><br>
    <t>Spearmen: <output id="spearmen">
        <%= spearmen %>
      </output></t><br>
    <t>Swordsmen: <output id="swordsmen">
        <%= swordsmen %>
      </output></t><br>
    <t>Horsemen: <output id="horsemen">
